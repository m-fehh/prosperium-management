@using Prosperium.Management.Web.Startup
@using Prosperium.Management.Web.Models.Users
@model UserListViewModel
@{
    ViewBag.Title = L("Users");
    ViewBag.CurrentPageName = PageNames.Users;
}
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Users/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Users/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.blockUI/2.70/jquery.blockUI.min.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="~/css/Extract/style.css" />

<style>
    .table-bordered td, .table-bordered th{
        border: none;
    }

    .custom-button{
        width: auto;
    }
    </style>

<div class="form-container" id="User">
    <h2>@ViewData["Title"]</h2>

    <div class="row" style="display: flex; justify-content: flex-end;">
        <div class="col-sm-6"></div>
        <div class="col-sm-6" style="display: flex; justify-content: end;">
            <a href="javascript:;" data-toggle="modal" data-target="#UserCreateModal" class="custom-button">
                <i class="fa fa-plus"></i> &nbsp; Adicionar Novo Usuário
            </a>
        </div>
    </div>


    <table id="UsersTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>@L("UserName")</th>
                <th>@L("FullName")</th>
                <th>@L("EmailAddress")</th>
                <th>@L("IsActive")</th>
                <th style="width: 150px">@L("Actions")</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>


@await Html.PartialAsync("~/Views/Users/_CreateModal.cshtml", Model)

<div class="modal fade" id="UserEditModal" tabindex="-1" role="dialog" aria-labelledby="UserEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
