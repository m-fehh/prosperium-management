    <div class="sidebar" style="box-shadow: none;width: 100%;overflow-x: hidden;display: flex;margin-top: -22px;flex-direction: column;justify-content: flex-start;height: 100%;padding: 0">
        <ul class="nav flex-column" style="width: 100px; padding-top: 10px;">
            <hr class="divider-menu">

            <li class="nav-item">
                <a class="nav-link" href="#" title="Dashboard">
