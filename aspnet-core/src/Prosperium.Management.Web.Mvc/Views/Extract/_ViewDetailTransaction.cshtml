@using Prosperium.Management.OpenAPI.V1.Transactions.Dto
@model TransactionDto
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title" id="transactionModalLabel">Detalhes da Transação</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <dl class="row">
        <dt class="col-sm-4">Tipo de Transação</dt>
        <dd class="col-sm-8">@Model.TransactionType</dd>

        <dt class="col-sm-4">Valor</dt>
        <dd class="col-sm-8">@Model.ExpenseValue.ToString("C")</dd>

        <dt class="col-sm-4">Descrição</dt>
        <dd class="col-sm-8">@Model.Description</dd>


        <dt class="col-sm-4">Tags</dt>
        <dd class="col-sm-8">@Model.Tags</dd>
    </dl>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
</div>
